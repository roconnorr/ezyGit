{
  "name": "ezygit",
  "description": "Git client using electron typescript and react",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Scott Maunder",
    "email": "maunderscott@gmail.com",
    "url": "https://teamlemon.xyz"
  },
  "build": {
    "appId": "com.my-website.my-app",
    "productName": "ezyGit",
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@blueprintjs/core": "^3.18.1",
    "@blueprintjs/docs-theme": "^3.3.0",
    "@blueprintjs/select": "^3.10.0",
    "@types/lodash": "^4.14.138",
    "@types/node": "^12.7.5",
    "@types/react": "^16.9.2",
    "@types/react-custom-scrollbars": "^4.0.6",
    "@types/react-virtualized-auto-sizer": "^1.0.0",
    "@types/react-window": "^1.8.1",
    "cross-env": "^6.0.0",
    "diff-lines": "^1.1.1",
    "electron-is-dev": "^1.0.1",
    "electron-rebuild": "^1.8.6",
    "isomorphic-git": "^0.67.2",
    "lodash": "^4.17.15",
    "monaco-editor": "^0.18.1",
    "react": "^16.9.0",
    "react-custom-scrollbars": "^4.2.1",
    "react-diff-viewer": "^2.0.1",
    "react-dom": "^16.9.0",
    "react-monaco-editor": "^0.31.0",
    "react-scripts": "^3.1.2",
    "react-virtualized-auto-sizer": "^1.0.2",
    "react-window": "^1.8.5",
    "request": "^2.88.0",
    "tslint": "^5.20.0"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "start": "rescripts start",
    "build": "rescripts build",
    "test": "rescripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "electron-pack": "electron-build -mw",
    "rebuild": "electron-rebuild -f -b"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@rescripts/cli": "^0.0.10",
    "@rescripts/rescript-env": "^0.0.5",
    "concurrently": "^4.1.0",
    "electron": "^4.0.6",
    "electron-builder": "^20.38.5",
    "typescript": "^3.3.3333",
    "wait-on": "^3.2.0"
  }
}
